pipeline {
    agent any
    environment {
        app = 'Davids App'
        file = 'Files/File1.txt'
        count=$(wc -m < $file)
    }
    stages {
        stage('Pre Requests') {
            steps {
                sh '''
                rm -rf *
                mkdir -p Files                
                '''
            }
        }
        stage('Building Stage') {
            steps {
                sh '''
                echo "Starting Building $app"
                echo "Starting Building $app" >> $file
                cat $file
                '''
            }
        }
        stage('Check Status Stage') {
            steps {
                sh '''
                test -f $file
                if [ "$count" -ge 5 ]; then                
                echo "$app Succesfuli Deploy"
                else
                echo "The Deployment of $app Faild"
                fi
                '''
            }
        }
    }
}
