pipeline {
    agent any
    environment {
      app = 'Davids app'
      path = 'files/file1.txt' 
    }

    stages {
        stage('Project Info') {
            steps {

                echo "Start Building $app"

            }
        }
        stage('Building stage') {
            steps {
                sh '''
                    echo "Hello"
                '''
            }
        }
        stage('Build Result') {
            steps {
                sh '''
                    echo "testing stage is starting"
                    find -f $path
                    grep $app $path
                    echo "$app Build Successfully"
                '''
            }
        }
    }
}
