pipeline {
    agent any

    stages {
        stage('Creating File1.txt') {
            steps {
                sh '''
                echo "creating file1.txt"
                echo "david is cool asbend" >> file1.txt
                '''
            }
        }

        stage ('Testing File1.tst') {
            steps {
                sh '''
                echo "starting test the file"
                test -f file1.txt
                grep "david" file1.txt
                '''
            }
        }

    }

}
