pipeline {
    agent any
    environment {
        app = 'Davids App'
        file = 'Files/File1.txt'
    }
    stages {
        stage('Starting Massage') {
            steps {
                sh '''
                rm -rf *
                mkdir Files
                echo "Starting Building $app"
                '''
            }
        }
        stage('Building Stage') {
            steps {
                sh '''
                mkdir -p files
                echo "Starting Building $app" >> files/$file
                '''
            }
        }
        stage('Check Status Stage') {
            steps {
                sh '''
                test -f files/$file
                grep "$app" files/$file
                '''
            }
        }
    }
}
