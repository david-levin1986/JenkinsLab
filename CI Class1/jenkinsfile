pipeline {
    agent any
    environment {
        app = 'Davids App'
        path = 'filles/file1.txt'
        
    }
    stages {
        stage('Starting Massage') {
            steps {
                sh '''
                echo "Building $app"
                '''
            }
        }

        stage('Building Stage') {
            steps {
                sh '''
                echo "Building $app" >> $path
                '''
            }
        }

                stage('Building Test') {
            steps {
                sh '''
                echo "Testing The Building $app Status"
                find -f $path
                grep $app $path
                echo "$app Succesfuly Deploy"
                '''
            }
        }
    }
}
