pipeline {
    agent any

    stages {
        stage('Creating File1.txt') {
            steps {
                sh '''
                echo "creating file1.txt"
                echo "david is cool asbend" >> file1.txt
                '''
            }
        }
    }

    stages {
        stage('Creating File2.txt') {
            steps {
                sh '''
                echo "creating file2.txt"
                echo "ruth is cool asbend" >> file2.txt
                '''
            }
        }
    }

}
