pipeline {
    agent any
    environment {
        app = 'Davids App'
        file = 'File1.txt'
    }
    stages {
        stage('Starting Massage') {
            steps {
                sh '''
                echo "Starting Building $app"
                '''
            }
        }
        stage('Building Stage') {
            steps {
                sh '''
                echo "Starting Building $app" >> files/$file
                '''
            }
        }
    }
}
